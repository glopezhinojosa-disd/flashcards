      {front:"Fence",    pron:"(f√©ns)",         es:"cerca / valla"},
      {front:"Brick",    pron:"(br√≠k)",         es:"ladrillo"},

      // --- Verbs (30) ---
      {front:"Build",    pron:"(b√≠ld)",         es:"construir"},
      {front:"Catch",    pron:"(k√°ach)",        es:"atrapar"},
      {front:"Drop",     pron:"(drap)",         es:"soltar / dejar caer"},
